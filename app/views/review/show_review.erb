<div class="wrapper">
 <div id="logo">
   <h1>Poolite</h1>
   <% if flash.has?(:message) %>
     <%= flash[:message] %>
   <% end %>
 </div>
 <nav>
   <% if @logged %>
    <a href="/">Home</a> <a href="/user/<%=@user.slug%>">Profile</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% else %>
     <a href="/">Home</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% end %>
 </nav>
</div>

<% if @review %>
  <h2><a href="/user/<%=@review.user.slug%>"><%=@review.user.username%></a></h2>
  <h3><a href="/restrooms/<%=@review.restroom.id%>"><%=@review.restroom.restaurant_name%></a> - <%=@review.restroom.rating%> Stars</h3>
  <h3><%=@review.restroom.location%></h3>
  <h4><%=@review.body%> <%=@review.stars%> Star(s)</h4>
<% end %>

<% if @my_review %>
  <form class="" action="/delete/<%=@review.id%>" method="post">
    <input type="submit" value="Delete">
  </form>

  <a href="/review/<%=@review.id%>/edit">Edit</a>
<% end %>

<a href="/logout">Log out</a>
