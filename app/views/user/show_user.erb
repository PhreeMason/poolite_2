<div class="wrapper">
 <div id="logo">
   <h1>Poolite</h1>
 </div>
 <nav>
   <% if @logged %>
    <a href="/">Home</a> <a href="/user/<%=@user.slug%>">Profile</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% else %>
    <a href="/">Home</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% end %>
 </nav>
</div>

<h2><%= @profile.username%></h2>
<% if !@profile.reviews.blank? %>
  <% for item in @profile.reviews %>
  <h3>
    <%=item.restroom.restaurant_name%> - <%=item.restroom.location%> - <%=item.restroom.rating%> Stars
  </h3>
    <a href="/restrooms/<%=item.restroom.id%>">
      <div class="">
        <h3><%=item.body%> <%=item.stars%> Star(s)</h3>
      </div>
    </a>
  <% end %>
<% else %>
  <h3>Oh no you haven't reviewed any restrooms yet!</h3>
<% end %>

<a href="/logout">Log out</a>
