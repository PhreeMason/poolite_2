<div class="wrapper">
 <div id="logo">
   <h1>Poolite</h1>
 </div>
 <nav>
   <% if @logged %>
    <a href="/">Home</a> <a href="/user/<%=@user.slug%>">Profile</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% else %>
     <a href="/">Home</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% end %>
 </nav>
</div>

<% if !@restrooms.blank? %>
  <% for item in @restrooms %>
    <div class="">
      <h2><a href="/restrooms/<%=item.id%>"><%=item.restaurant_name%></a></h2>
        <% if !item.reviews.blank? %>
          <ul>
            <% for item in item.reviews %>
              <li>
                <a href="/review/<%=item.id%>">
                  <div class="">
                    <h3><%="#{item.body} #{item.stars}"%></h3>
                  </div>
                </a>
              </li>
              <%end%>
          </ul>
          <% end %>
    </div>
  <% end %>
<% end %>

<% if @logged %>
  <a href="/logout">Log out</a>
<% end %>
