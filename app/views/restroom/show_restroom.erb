<h1><%= @restroom.restaurant_name%> <%=@restroom.rating%></h1>
<h2><%=@restroom.location%></h2>

<% if !@restroom.reviews.blank? %>
  <% for item in @restroom.reviews %>
    <h3><%=item.user.username%> Rating: <%=item.stars%> Star(s)</h3>
    <a href="/review/<%=item.id%>">
      <div class="">
        <h4>
        <%=item.body%>
        </h4>
      </div>
    </a>
  <% end %>
<% else %>
  <h3>This restroom hasn't been reviewed yet! You can be the first to review it <a href="restroom/<%=@restroom.id%>/review">here</a></h3>
<% end %>
