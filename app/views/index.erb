<head>
<style>
body {
    background-color:rgb(213, 114, 23);
}
</style>
</head>
<div class="wrapper">
 <div id="logo">
   <h1>Poolite</h1>
   <h2>Every poo should be polite</h2>
 </div>
 <nav>
   <% if @logged %>
    <a href="/">Home</a> <a href="/user/<%=@user.slug%>">Profile</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% else %>
     <a href="/">Home</a> <a href="/review/new">Write A Review</a> <a href="/restroom">Restrooms</a>
   <% end %>
 </nav>
</div>

<% if !@restrooms.blank? %>
  <% for item in @restrooms %>
  <h3><%=item.restaurant_name%> <%=item.rating%> Stars</h3>
    <a href="/restrooms/<%=item.id%>">
      <div class="index page">
        <h4><%=item.location%></h4>
        <%=item.reviews.sample.body%>
      </div>
    </a>
  <% end %>
<% else %>

<% end %>


<% if @logged %>
  <p><a href="/logout">Log out</a></p>
<% else %>
  <p><a href="/login">Log In</a>
  <a href="/signup">Sign Up</a></p>
<% end %>
